<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        tools:context=".Activity6">

    <Button
            android:text="Comenzar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/act5_btn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp" />

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/act5_input"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/act5_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="Introduce tu nombre" />

    <ImageView
            android:layout_width="278dp"
            android:layout_height="186dp"
            app:srcCompat="@mipmap/ic_batman_foreground"
            android:id="@+id/act5_image"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/act5_input"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>